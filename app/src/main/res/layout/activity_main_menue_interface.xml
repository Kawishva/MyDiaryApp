<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1D2896"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.example.githmidiaryapp.Main_menue_interface">

    <TextView
        android:id="@+id/welcome_text_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="60dp"
        android:fontFamily="@font/archivo"
        android:text="Welcome Githmi !"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/user_image_id"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/pb1"
        app:tint="@color/white" />

    <Button
        android:id="@+id/view_diary_btn_id"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#24225C"
        android:text="View Diary"
        android:textSize="20dp"
        app:icon="@drawable/eye"
        app:iconSize="40dp"
        app:iconTint="#FFFFFF" />

    <Button
        android:id="@+id/add_entry_btn_id"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#24225C"
        android:text="Add New Entry"
        android:textSize="20dp"
        app:icon="@drawable/plus"
        app:iconSize="35dp"
        app:iconTint="#FFFFFF" />

    <Button
        android:id="@+id/settings_btn_id"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="#24225C"
        android:text="Settings"
        android:textSize="20dp"
        app:icon="@drawable/settings"
        app:iconSize="35dp"
        app:iconTint="#FFFFFF" />

    <ImageView
        android:id="@+id/bottom_img_id"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginBottom="25dp"
        android:scaleType="centerCrop"
        android:src="@drawable/line"
        app:tint="@color/white" />
</LinearLayout>